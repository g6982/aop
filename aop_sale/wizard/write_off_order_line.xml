<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_write_off_order_line_wizard_form" model="ir.ui.view">
            <field name="name">write.off.line.wizard</field>
            <field name="model">write.off.line.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="write_off_line_ids">
                        <tree editable="bottom">
                            <field name="sale_order_line_id"/>
                            <field name="handover_number"/>
                            <field name="file_validate"/>
                        </tree>
                    </field>

                    <footer>
                        <button name="start_write_off" string="Write-off" class="oe_highlight"
                                type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>