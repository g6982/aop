<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header//button[@name='preview_invoice']" position="after">
                    <button name="create_account_tax_invoice"
                            string="税务发票"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list"/>
                </xpath>

                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="account_tax_invoice_id" string="税务发票"
                           attrs="{'invisible': [('account_tax_invoice_id', '=', False)]}"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>