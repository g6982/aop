<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>

        <record id="action_aop_contract_view" model="ir.actions.act_window">
            <field name="name">Contract</field>
            <field name="res_model">aop.contract</field>

        </record>

        <record id="view_aop_contract_tree" model="ir.ui.view">
            <field name="name">aop.contract.tree</field>
            <field name="model">aop.contract</field>
            <field name="arch" type="xml">
                <tree string="Contract">

                    <field name="name"/>
                    <field name="serial_number"/>
                    <field name="version_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>

                </tree>
            </field>
        </record>

        <record id="view_aop_contract_form" model="ir.ui.view">
            <field name="name">aop.contract.form</field>
            <field name="model">aop.contract</field>
            <field name="arch" type="xml">
                <form string="Carrier">
                    <sheet>

                        <div class="oe_title" name="title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="serial_number"/>
                                <field name="version_id"/>
                                <field name="serial_no"/>
                                <field name="is_formal"/>
                                <field name="project_id"/>
                                <field name="aging"/>

                            </group>
                            <group>

                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="effective_date"/>
                                <field name="expiry_date"/>
                                <field name="source"/>
                                <field name="type" widget="radio"/>

                            </group>
                        </group>

                        <notebook>
                            <page string="Contract terms">
                                <field name="delivery_carrier_ids">
                                    <tree>
                                        <field name="name"/>
                                        <!--
                                        <field name="product_id"/>
                                        -->
                                        <field name="product_template_id"/>
                                        <field name="service_product_id"/>
                                        <field name="start_position"/>
                                        <field name="end_position"/>

                                    </tree>

                                </field>

                            </page>
                            <page string="Rule lines">
                                <field name="contract_rule_ids">
                                    <tree create="false" delete="false" editable="bottom">
                                        <field name="route_id"
                                               options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                        <field name="rule_id"
                                               options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                        <field name="service_product_id"
                                               options="{'no_quick_create': True, 'no_create_edit': True}"/>
<!--                                        <field name="fee"/>-->
                                    </tree>
                                </field>
                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

    </data>

</odoo>