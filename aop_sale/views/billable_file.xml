<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_billable_file_form" model="ir.ui.view">
            <field name="name">billable.file.form</field>
            <field name="model">billable.file</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="vin_code"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="number"/>
                            </group>
                            <group>
                                <field name="transfer_way"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="price_unit"/>
                                <field name="price_total"/>
                            </group>
                            <group>
                                <field name="diff_amount"/>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_billable_file_tree" model="ir.ui.view">
            <field name="name">billable.file.tree</field>
            <field name="model">billable.file</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="vin_code"/>
                    <field name="number"/>
                    <field name="transfer_way"/>
                    <field name="price_unit"/>
                    <field name="price_total"/>
                    <field name="diff_amount"/>
                    <field name="amount"/>
                    <field name="reimbursement_no"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>