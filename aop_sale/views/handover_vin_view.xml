<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_handover_vin_form" model="ir.ui.view">
            <field name="name">handover.vin.form</field>
            <field name="model">handover.vin</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="verify_handover" string="Verify" type="object" class="oe_highlight"/>
                        <button name="cancel_verify_handover" string="Cancel" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="vin_code"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="write_user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="write_datetime" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="order_line_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_handover_vin_tree" model="ir.ui.view">
            <field name="name">handover.vin.tree</field>
            <field name="model">handover.vin</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="vin_code"/>
                    <field name="write_user_id"/>
                    <field name="write_datetime"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>